# ==================== CONFIGURACIÓN DE GRABACIÓN ====================
# Duración de cada segmento de video (en segundos)
# 600 = 10 minutos, 300 = 5 minutos, 1800 = 30 minutos
SEGMENT_DURATION=600

# Codec de video
# - "copy": No recodificar (más eficiente, recomendado)
# - "libx264": Recodificar con H.264 (solo si es necesario)
VIDEO_CODEC=copy

# Formato de video
# Opciones: mp4, mkv, avi
VIDEO_FORMAT=mp4

# ==================== RETENCIÓN LOCAL ====================
# Horas que se mantienen los archivos localmente después de subir
# Después de este tiempo, se eliminan automáticamente
LOCAL_RETENTION_HOURS=24

# Eliminar videos inmediatamente después de subir a S3 (true/false)
# true: Elimina inmediatamente después de verificar subida exitosa (ahorra espacio)
# false: Mantiene en uploaded/ y elimina después de LOCAL_RETENTION_HOURS
DELETE_IMMEDIATELY_AFTER_UPLOAD=true

# ==================== LOGGING ====================
# Nivel de log: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ==================== PATHS (Opcional) ====================
# Si no se especifican, se usan valores por defecto
# BASE_DIR=/home/ubuntu/ferret-system
# RECORDINGS_DIR=/home/ubuntu/ferret-system/data/videos/recordings
# COMPLETED_DIR=/home/ubuntu/ferret-system/data/videos/completed
# UPLOADED_DIR=/home/ubuntu/ferret-system/data/videos/uploaded

# ==================== CONFIGURACIÓN AVANZADA ====================
# Normalmente no es necesario cambiar estos valores

# Reintentos de subida a S3 antes de marcar como fallido
S3_UPLOAD_RETRIES=3

# Tiempo de espera para considerar archivo completo (segundos)
FILE_STABILITY_TIME=5

# Intervalo de monitoreo de procesos (segundos)
MONITOR_INTERVAL=30

# Habilitar compresión antes de subir (experimental)
# ENABLE_COMPRESSION=false

# Bitrate máximo para grabación (Mbps)
# MAX_BITRATE=4
